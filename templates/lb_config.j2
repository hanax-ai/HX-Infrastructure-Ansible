
# Load Balancer Configuration Template for Blue-Green Deployment
# Generated: {{ ansible_date_time.iso8601 }}
# Target Environment: {{ target_environment }}

upstream backend {
    {% if target_environment == 'blue' %}
    {% for host in groups['prod_blue'] | default([]) %}
    server {{ hostvars[host]['ansible_default_ipv4']['address'] }}:{{ service_port | default(8080) }} max_fails=3 fail_timeout=30s;
    {% endfor %}
    {% elif target_environment == 'green' %}
    {% for host in groups['prod_green'] | default([]) %}
    server {{ hostvars[host]['ansible_default_ipv4']['address'] }}:{{ service_port | default(8080) }} max_fails=3 fail_timeout=30s;
    {% endfor %}
    {% endif %}
}

server {
    listen 80;
    server_name {{ app_domain | default('localhost') }};
    
    # Health check endpoint
    location /health {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_connect_timeout 5s;
        proxy_send_timeout 10s;
        proxy_read_timeout 10s;
    }
    
    # Main application
    location / {
        proxy_pass http://backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Connection pooling
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
        # Add deployment info header
        add_header X-Deployment-Color {{ target_environment }};
        add_header X-Deployment-Time {{ ansible_date_time.iso8601 }};
    }
    
    # Status endpoint
    location /status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
}
