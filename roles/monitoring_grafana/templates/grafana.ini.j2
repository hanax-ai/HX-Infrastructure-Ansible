
[DEFAULT]
instance_name = {{ grafana_instance_name | default('grafana') }}

[paths]
data = /var/lib/grafana
logs = /var/log/grafana
plugins = /var/lib/grafana/plugins
provisioning = /etc/grafana/provisioning

[server]
protocol = {{ grafana_protocol | default('http') }}
http_addr = {{ grafana_http_addr | default('0.0.0.0') }}
http_port = {{ grafana_port | default(3000) }}
domain = {{ grafana_domain | default('localhost') }}
root_url = {{ grafana_root_url | default('%(protocol)s://%(domain)s:%(http_port)s/') }}
serve_from_sub_path = {{ grafana_serve_from_sub_path | default('false') }}

[database]
type = {{ grafana_database_type | default('sqlite3') }}
host = {{ grafana_database_host | default('127.0.0.1:3306') }}
name = {{ grafana_database_name | default('grafana') }}
user = {{ grafana_database_user | default('root') }}
password = {{ grafana_database_password | default('') }}
ssl_mode = {{ grafana_database_ssl_mode | default('disable') }}
path = {{ grafana_database_path | default('/var/lib/grafana/grafana.db') }}

[session]
provider = {{ grafana_session_provider | default('file') }}
provider_config = {{ grafana_session_provider_config | default('sessions') }}
cookie_name = {{ grafana_session_cookie_name | default('grafana_sess') }}
cookie_secure = {{ grafana_session_cookie_secure | default('false') }}
session_life_time = {{ grafana_session_life_time | default('86400') }}

[security]
admin_user = {{ grafana_admin_user | default('admin') }}
admin_password = {{ grafana_admin_password | default('admin') }}
secret_key = {{ grafana_secret_key | default('SW2YcwTIb9zpOOhoPsMm') }}
disable_gravatar = {{ grafana_disable_gravatar | default('false') }}
data_source_proxy_whitelist = {{ grafana_data_source_proxy_whitelist | default('') }}
cookie_secure = {{ grafana_cookie_secure | default('false') }}
cookie_samesite = {{ grafana_cookie_samesite | default('lax') }}

[users]
allow_sign_up = {{ grafana_allow_sign_up | default('false') }}
allow_org_create = {{ grafana_allow_org_create | default('false') }}
auto_assign_org = {{ grafana_auto_assign_org | default('true') }}
auto_assign_org_id = {{ grafana_auto_assign_org_id | default('1') }}
auto_assign_org_role = {{ grafana_auto_assign_org_role | default('Viewer') }}
default_theme = {{ grafana_default_theme | default('dark') }}

[auth]
disable_login_form = {{ grafana_disable_login_form | default('false') }}
disable_signout_menu = {{ grafana_disable_signout_menu | default('false') }}

[auth.anonymous]
enabled = {{ grafana_auth_anonymous_enabled | default('false') }}
org_name = {{ grafana_auth_anonymous_org_name | default('Main Org.') }}
org_role = {{ grafana_auth_anonymous_org_role | default('Viewer') }}

[log]
mode = {{ grafana_log_mode | default('console file') }}
level = {{ grafana_log_level | default('info') }}

[log.console]
level = {{ grafana_log_console_level | default('') }}
format = {{ grafana_log_console_format | default('console') }}

[log.file]
level = {{ grafana_log_file_level | default('') }}
format = {{ grafana_log_file_format | default('text') }}
log_rotate = {{ grafana_log_file_log_rotate | default('true') }}
max_lines = {{ grafana_log_file_max_lines | default('1000000') }}
max_size_shift = {{ grafana_log_file_max_size_shift | default('28') }}
daily_rotate = {{ grafana_log_file_daily_rotate | default('true') }}
max_days = {{ grafana_log_file_max_days | default('7') }}

[alerting]
enabled = {{ grafana_alerting_enabled | default('true') }}
execute_alerts = {{ grafana_alerting_execute_alerts | default('true') }}

[metrics]
enabled = {{ grafana_metrics_enabled | default('true') }}
interval_seconds = {{ grafana_metrics_interval_seconds | default('10') }}

[grafana_net]
url = {{ grafana_net_url | default('https://grafana.net') }}

[external_image_storage]
provider = {{ grafana_external_image_storage_provider | default('') }}

[panels]
disable_sanitize_html = {{ grafana_panels_disable_sanitize_html | default('false') }}

[plugins]
enable_alpha = {{ grafana_plugins_enable_alpha | default('false') }}
app_tls_skip_verify_insecure = {{ grafana_plugins_app_tls_skip_verify_insecure | default('false') }}

