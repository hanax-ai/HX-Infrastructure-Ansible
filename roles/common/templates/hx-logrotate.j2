/var/log/hx/*.log {
    daily
    missingok
    rotate {{ hx_common_log_retention_days }}
    compress
    delaycompress
    notifempty
    create 0644 root root
    postrotate
        systemctl reload rsyslog > /dev/null 2>&1 || true
    endscript
}

