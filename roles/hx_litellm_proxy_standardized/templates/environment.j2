
# Environment variables for LiteLLM Proxy
# Generated by Ansible - HX LiteLLM Proxy Standardized Role
# {{ ansible_managed }}

# Core LiteLLM settings
LITELLM_LOG={{ hx_litellm_log_level }}
LITELLM_DROP_PARAMS=true
LITELLM_SET_VERBOSE={{ 'true' if hx_litellm_log_level == 'DEBUG' else 'false' }}

# Database configuration
{% if hx_litellm_database_enabled %}
DATABASE_URL="{{ hx_litellm_database_url }}"
{% endif %}

# Caching configuration
{% if hx_litellm_caching_enabled and hx_litellm_cache_type == "redis" %}
REDIS_HOST={{ hx_litellm_redis_host }}
REDIS_PORT={{ hx_litellm_redis_port }}
{% if hx_litellm_redis_password %}
REDIS_PASSWORD="{{ hx_litellm_redis_password }}"
{% endif %}
{% endif %}

# Security
LITELLM_MASTER_KEY="{{ hx_litellm_master_key }}"

# Performance settings
LITELLM_REQUEST_TIMEOUT={{ hx_litellm_request_timeout }}
LITELLM_NUM_RETRIES={{ hx_litellm_retry_attempts }}

# Custom environment variables
{% for key, value in hx_litellm_env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}

# Application settings
APP_NAME=litellm-proxy
APP_VERSION={{ hx_litellm_version }}
APP_HOME={{ hx_litellm_home }}
CONFIG_DIR={{ hx_litellm_config_dir }}
LOG_DIR={{ hx_litellm_log_dir }}
DATA_DIR={{ hx_litellm_data_dir }}

# Service settings
HOST={{ hx_litellm_host }}
PORT={{ hx_litellm_port }}
WORKERS={{ hx_litellm_workers }}
{% if hx_litellm_ssl_enabled %}
SSL_ENABLED=true
SSL_CERT_FILE={{ hx_litellm_ssl_cert_file }}
SSL_KEY_FILE={{ hx_litellm_ssl_key_file }}
{% else %}
SSL_ENABLED=false
{% endif %}
