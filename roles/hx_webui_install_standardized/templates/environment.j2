
# Environment variables for {{ hx_webui_app_name }}
# Generated by Ansible - HX Web UI Install Standardized Role
# {{ ansible_managed }}

{% for key, value in hx_webui_env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}

# Application settings
APP_NAME={{ hx_webui_app_name }}
APP_VERSION={{ hx_webui_app_version }}
APP_HOME={{ hx_webui_app_home }}
APP_USER={{ hx_webui_app_user }}
APP_GROUP={{ hx_webui_app_group }}

# Server settings
SERVER_NAME={{ hx_webui_server_name }}
HTTP_PORT={{ hx_webui_listen_port }}
{% if hx_webui_ssl_enabled %}
HTTPS_PORT={{ hx_webui_ssl_port }}
SSL_ENABLED=true
{% else %}
SSL_ENABLED=false
{% endif %}

# Paths
ROOT_DIR={{ hx_webui_root_dir }}
LOG_DIR=/var/log/{{ hx_webui_server_type }}
BACKUP_DIR={{ hx_webui_backup_dir }}

# Features
HEALTH_CHECK_ENABLED={{ hx_webui_health_check_enabled | lower }}
MONITORING_ENABLED={{ hx_webui_monitoring_enabled | lower }}
CACHING_ENABLED={{ hx_webui_enable_caching | lower }}
GZIP_ENABLED={{ hx_webui_enable_gzip | lower }}
