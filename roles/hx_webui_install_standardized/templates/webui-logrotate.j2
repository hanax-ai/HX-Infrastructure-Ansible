
# Log rotation for {{ hx_webui_app_name }}
# Generated by Ansible - HX Web UI Install Standardized Role
# {{ ansible_managed }}

{{ hx_webui_access_log }} {{ hx_webui_error_log }} {
    daily
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 644 {{ hx_webui_app_user }} {{ hx_webui_app_group }}
    sharedscripts
    postrotate
        if [ -f /var/run/{{ hx_webui_server_type }}.pid ]; then
            kill -USR1 `cat /var/run/{{ hx_webui_server_type }}.pid`
        fi
    endscript
}
