
# Fail2Ban configuration for PostgreSQL
# Generated by Ansible - HX PostgreSQL Auth Standardized Role
# {{ ansible_managed }}

[postgresql]
enabled = true
port = {{ hx_pg_port }}
filter = postgresql
logpath = {{ hx_pg_log_dir }}/postgresql-*.log
maxretry = 5
bantime = 3600
findtime = 600
action = iptables[name=PostgreSQL, port={{ hx_pg_port }}, protocol=tcp]
         sendmail-whois[name=PostgreSQL, dest=root, sender=fail2ban@localhost]
