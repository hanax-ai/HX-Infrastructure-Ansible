
# PostgreSQL log rotation configuration
# Generated by Ansible - HX PostgreSQL Auth Standardized Role
# {{ ansible_managed }}

{{ hx_pg_log_dir }}/*.log {
    daily
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 640 postgres postgres
    postrotate
        /usr/bin/killall -HUP rsyslog 2> /dev/null || true
    endscript
}
