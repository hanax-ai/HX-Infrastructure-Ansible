
# PostgreSQL Client Authentication Configuration File
# Generated by Ansible - HX PostgreSQL Auth Standardized Role
# {{ ansible_managed }}
#
# This file controls: which hosts are allowed to connect, how clients
# are authenticated, which PostgreSQL user names they can use, which
# databases they can access.
#
# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             postgres                                peer

# IPv4 local connections:
{% for entry in hx_pg_hba_entries %}
{% if entry.type == 'host' and entry.address is defined %}
{{ entry.type }}    {{ entry.database }}    {{ entry.user }}    {{ entry.address }}    {{ entry.auth_method }}{% if entry.auth_options is defined %} {{ entry.auth_options }}{% endif %}

{% elif entry.type == 'local' %}
{{ entry.type }}   {{ entry.database }}    {{ entry.user }}                    {{ entry.auth_method }}{% if entry.auth_options is defined %} {{ entry.auth_options }}{% endif %}

{% endif %}
{% endfor %}

# Additional security entries
# Deny all other connections
host    all             all             0.0.0.0/0               reject
host    all             all             ::/0                    reject

# Allow replication connections for backup user
{% if hx_pg_backup_user is defined and 'CHANGE_ME' not in hx_pg_backup_password %}
local   replication     {{ hx_pg_backup_user }}                 {{ hx_pg_auth_method }}
host    replication     {{ hx_pg_backup_user }}     127.0.0.1/32    {{ hx_pg_auth_method }}
host    replication     {{ hx_pg_backup_user }}     ::1/128         {{ hx_pg_auth_method }}
{% endif %}

# Monitoring user connections
{% if vault_monitoring_password is defined and 'CHANGE_ME' not in vault_monitoring_password %}
local   all             monitoring                              {{ hx_pg_auth_method }}
host    all             monitoring      127.0.0.1/32            {{ hx_pg_auth_method }}
host    all             monitoring      ::1/128                 {{ hx_pg_auth_method }}
{% endif %}
